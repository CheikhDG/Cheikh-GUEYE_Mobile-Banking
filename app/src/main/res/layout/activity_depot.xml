<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bakeli.mobilebanking.activities.DepotActivity">

    <TextView
        android:id="@+id/Vo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Vous allez effectuer un depôt"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="4dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etMntDepot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Vo"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:hint="Montant à deposer"
        android:inputType="number" />

    <Button
        android:id="@+id/bDepot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etMntDepot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Effecuer la transaction" />

    <Button
        android:id="@+id/bDepotCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Annuler la transaction"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
